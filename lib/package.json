{
  "name": "use-styled",
  "version": "0.1.2",
  "description": "A lightweight styled components library optimized for Tailwind CSS",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/**/*.ts*",
    "clean": "rm -rf dist",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "tailwind",
    "styled-components",
    "css-in-js",
    "typescript"
  ],
  "author": "Bruno Garcia",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Brunowilliang/use-styled.git"
  },
  "homepage": "https://github.com/Brunowilliang/use-styled",
  "bugs": {
    "url": "https://github.com/Brunowilliang/use-styled/discussions"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.40.0",
    "jest": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  }
}